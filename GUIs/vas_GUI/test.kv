            Slider:
                orientation: 'horizontal'
                id: vas
                min: -15   # VAS starting val
                max: 50    # VAS ending val
                value: 0   # initial position of slider
                orientation: 'horizontal'
                on_value: root.on_slider_value(vas.value)
                cursor_image: 'pin_2.png'  # Custom cursor image
                cursor_size: (35, 35)  # Custom cursor size

                # specifies position of the cursor label
                on_touch_down: cursor_label.center_x = args[1].x; cursor_label.y = 25+vas.center_y  # Adjust the position of the label when the touch starts
                on_touch_move: cursor_label.center_x = args[1].x; cursor_label.y = vas.center_y + vas.height / 22  # Adjust the position of the label when the touch moves
                
                # corresponding cursor label
                Label:
                    id: cursor_label
                    text: '$'+str(round(vas.value,2))
                    size_hint: None, None
                    size: self.texture_size
                    color: '#0d9c35' # set label to same color as A
                    
                    # Adds a background to the linked cursor label
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex('#07485B')
                        Rectangle:
                            pos: self.pos
                            size: self.size





