#This describes the layout and the orientation of the 10 buttons on the GUI
<GuiVas>:
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        
        BoxLayout:
            size_hint_y: 0.5
            orientation: 'horizontal'

            Label:
                text:'Not\nValuable:\n$15' 
                size_hint_x: 0.08
                halign: 'center'
                valign: 'center'
                text_size: self.size
                font_name: 'Roboto'
                font_size: 30 

            Slider:
                orientation: 'horizontal'
                id: vas
                min: -15   # VAS starting val
                max: 50    # VAS ending val
